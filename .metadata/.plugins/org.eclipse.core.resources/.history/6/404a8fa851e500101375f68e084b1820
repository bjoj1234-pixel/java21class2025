package iFexample;

import java.util.Scanner;

public class ifEx05 {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		System.out.println("금액을 입력하세요");
		
		int price = scan.nextInt();
		
		
		int a = price/50000;
		System.out.println("오만원권: "+ a +"매");
		int b = (price-(a*50000))/10000;
		System.out.println("일만원권: "+ b +"매");
		int c = (price-(b*10000+a*50000))/5000;
		System.out.println("오천원권: "+ c +"매");
		int d = (price-(c*5000+b*10000+a*50000))/1000;
		System.out.println("천원권: "+ d +"매");
		int e = (price-(d*1000+c*5000+b*10000+a*50000))/500;
		System.out.println("오백원권: "+ e +"매");
		int f = (price-(e*500+d*1000+c*5000+b*10000+a*50000))/100;
		System.out.println("백원권: "+ f +"매");

		
		

	}

}
