		//  /: 나누기(몫) => 지폐개수, %: 나머지 => 잔돈
		int money = 0;
		System.out.println("금액을 입력하세요");
		money = scan.nextInt();
		
		int oman = money/50000;
		int omanCharge = money%50000; //잔돈
		
		int ilman = omanCharge/10000;
		int ilmanCharge = omanCharge%10000; //잔돈
		
		int ochun = ilmanCharge/5000;
		int ochunCharge = ilmanCharge%5000; //잔돈
		
		int chun = ochunCharge/1000;
		int chunCharge = ochunCharge%1000; //잔돈
		
		int obak = chunCharge/500;
		int obakCharge = chunCharge%500; //잔돈
		
		int bak = obakCharge/100;
		int bakCharge = obakCharge%100; //잔돈

		
		System.out.printf("오만원권 %d매%n "
				+ "만원권 %d매%n 오천원권 %d매%n 천원권 %d매%n 오백원권 %d매%n 백원권 %d매%n",oman,ilman,ochun,chun,obak,bak);
	}

}
